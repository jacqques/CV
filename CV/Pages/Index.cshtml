@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style type="text/css">
    .download-container {
        background-color: #EEF7F8;
        display: flex;
        justify-content: center;
        padding: 10px;
        gap: 10px;
    }

    .download-item {
        width: 33%;
        display: flex;
        justify-content: center;
    }
    .download-a {
        color: black;
        text-decoration: none;
        font-size: 1.2em;
    }
</style>

<div class="text-center">
    <h1 class="display-3">Welcome</h1>
    <br/>
    <h2 class="display-6">CV</h2>
    <div class="download-container shadow rounded">
        <div class="download-item shadow-sm rounded card">
            <a class="download-a" asp-area="Pages" asp-page="/Cv"><p>To see online CV click here</p></a>
        </div>
        <div class="download-item shadow-sm rounded card">
            <a class="download-a" asp-page-handler="DownloadCVODT"><p>Download CV as .odt</p></a>
        </div>
        <div class="download-item shadow-sm rounded card">
            <a class="download-a" asp-page-handler="DownloadCVPDF"><p>Download CV as .pdf</p></a>
        </div>
    </div>
    <h2 class="display-6">Recommendation</h2>
    <div class="download-container shadow rounded">
        <div class="download-item shadow-sm rounded card">
            <a class="download-a" asp-page-handler="DownloadRecommendation"><p>Download newest Recommendation as .pdf</p></a>
        </div>
    </div>
    <h2 class="display-6">Exams diploma</h2>
    <div class="download-container shadow rounded">
        <div class="download-item shadow-sm rounded card">
            <a class="download-a" asp-page-handler="DownloadBevisDiploma"><p>Download graduation diploma as .pdf</p></a>
        </div>
    </div>




</div>
