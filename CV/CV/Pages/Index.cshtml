@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style type="text/css">
    .download-container {
        background-color: #EEF7F8;
        display: flex;
        justify-content: center;
        padding: 10px;
        gap: 10px;
    }

    .download-item {
        width: 100%;
        padding: 1px;
    }
    .download-a {
        color: black;
        text-decoration: none;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2 class="display-6">CV</h2>
    <div class="download-container">
        <div class="download-item shadow rounded">
            <a class="download-a" asp-area="Pages" asp-page="/cv"><p>To see online CV click here</p></a>
        </div>
        <div class="download-item shadow rounded">
            <a class="download-a" asp-page-handler="DownloadCVODT"><p>Download CV as .odt</p></a>
        </div>
        <div class="download-item shadow rounded">
            <a class="download-a" asp-page-handler="DownloadCVPDF"><p>Download CV as .pdf</p></a>
        </div>
    </div>
    <h2>Recommendation</h2>
    <div class="download-container"> @*Recommendation*@
        <a class="download-item" asp-page-handler="DownloadRecommendation"><p>Download newest Recommendation as .pdf</p></a>
    </div>
    <h2>Exams diploma</h2>
    <div class="download-container"> @*diploma*@
        <a class="download-item" asp-page-handler="DownloadBevisDiploma"><p>Download graduation diploma as .pdf</p></a>
    </div>




</div>
