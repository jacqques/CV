<style type="text/css">
    .background {
        background: black;
    }

    .the-text {
        white-space: nowrap;
        width: 41%;
        margin-top: 10%;
    }

    .line {
        display: flex;
        justify-content: space-between;
    }

    .center-div {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .the-text:has(.word:hover) .word:not(.word:hover) {
        opacity: 0.2
    }

    .word {
        color: white;
        font-size: 3vw;
        margin: 0;
        width: 0;
        display: flex;
        justify-content: left;
    }

    .word:hover > .letter {
        transition-duration: 800ms;
    }

    .word > .letter {
        transition: transform 350ms ease;
    }

    .word:hover > .letter:nth-child(1) {
        transform: translate(-80%, 60%) rotate(8deg);
    }

    .word:hover > .letter:nth-child(2) {
        transform: translate(40%, -60%) rotate(-8deg);
    }

    .word:hover > .letter:nth-child(3) {
        transform: translate(-70%, 20%) rotate(3deg);
    }

    .word:hover > .letter:nth-child(4) {
        transform: translate(-20%, 50%) rotate(8deg);
    }

    .word:hover > .letter:nth-child(5) {
        transform: translate(-40%, -35%) rotate(8deg);
    }

    .word:hover > .letter:nth-child(6) {
        transform: translate(-40%, -60%) rotate(8deg);
    }



</style>

